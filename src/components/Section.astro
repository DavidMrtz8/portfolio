---
export interface Props {
  id?: string;
  class?: string;
  title?: string;
  subtitle?: string;
  children: any;
}

const { id, class: className = "", title, subtitle, children } = Astro.props;
---

<section 
  id={id} 
  class={`py-8 md:py-16 ${className}`}
  role="region"
  aria-labelledby={title ? `${id}-title` : undefined}
>
  {(title || subtitle) && (
    <div class="container mx-auto px-4 mb-8 md:mb-12 text-center">
      {title && (
        <h2 
          id={id ? `${id}-title` : undefined}
          class="text-2xl md:text-3xl lg:text-4xl font-bold mb-3 md:mb-4"
        >
          {title}
        </h2>
      )}
      {subtitle && (
        <p class="text-base md:text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
          {subtitle}
        </p>
      )}
    </div>
  )}
  <div class="container mx-auto px-4">
    {children}
  </div>
</section>
