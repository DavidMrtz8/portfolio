---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="container mx-auto px-4 py-16" role="banner">
    <div class="flex items-center justify-between">
        <div class="flex flex-col" role="contentinfo">
            <h1 class="text-4xl font-bold mb-1">{t("header.title")}</h1>
            <p class="text-xl text-muted-foreground">{t("header.subtitle")}</p>
            <p class="text-lg mt-6 max-w-2xl">
                {t("header.description")}
            </p>
        </div>
        <img 
            src="/me.svg" 
            alt="David Martz - Software Engineer" 
            class="w-xl object-contain" 
            role="img"
            aria-label="David Martz portrait"
        />
    </div>
</header>
