---
// Import available technology icons
import ReactIcon from "../assets/icons/react.astro";
import NodeIcon from "../assets/icons/node.astro";
import DockerIcon from "../assets/icons/docker.astro";
import ExpressIcon from "../assets/icons/express.astro";
import CssIcon from "../assets/icons/css.astro";
import AwsIcon from "../assets/icons/aws.astro";
import TypeScriptIcon from "../assets/icons/typescript.astro";
import NextIcon from "../assets/icons/next-icon.astro";
import GoogleCloudIcon from "../assets/icons/google-cloud.astro";
import FlyIcon from "../assets/icons/fly.astro";
import FirebaseIcon from "../assets/icons/firebase.astro";
import TailwindIcon from "../assets/icons/tailwind.astro";
import TRPCIcon from "../assets/icons/trpc.astro";
import HonoIcon from "../assets/icons/hono.astro";
import BunIcon from "../assets/icons/bun.astro";
import BetterAuthIcon from "../assets/icons/better-auth.astro";
import VercelIcon from "../assets/icons/vercel.astro";
import AstroIcon from "../assets/icons/astro-icon.astro";
import BranchLeftIcon from "../assets/svg/resource13.svg?url";
import BranchRightIcon from "../assets/svg/resource12.svg?url";
// Project data
const projects = [
  {
    title: "IOBOT",
    description:
      "Omnichannel platform that centralizes the management of channels like WhatsApp, Instagram, and Messenger, offering advanced features for CRM, campaign automation, call center customer support, and performance analytics.",
    technologies: [
      "React",
      "Node.js",
      "Docker",
      "AWS",
      "TypeScript",
      "Vercel",
      "Express",
      "Cloud",
      "Tailwind",
    ],
    image: "/mockup_iobot.png",
    link: "https://app.iobot.chat",
    github: "#",
  },
  {
    title: "Embedded WhatsApp-QR API",
    description:
      "HTTP service built with Node.js/Express that manages a WhatsApp Web session, exposes endpoints to send messages, and serves pairing QR images. Emits events to an external backend via POST requests.",
    technologies: ["Fly", "Docker", "Node.js", "Express"],
    image: "/mockup_qr.png",
    link: "https://github.com/DavidMrtz8/whatsApp-qr",
    github: "#",
  },
  {
    title: "Wendy's Ecommerce",
    description:
      "Digital catalog system that lets users browse the menu, customize items, and manage their orders quickly and easily, optimizing the shopping experience on any device.",
    technologies: [
      "Next.js",
      "TypeScript",
      "Tailwind",
      "Firebase",
      "Vercel",
      "TRPC",
      "Hono",
      "Bun",
    ],
    image: "/wendys.png",
    link: "https://ordenar.wendys.hn/catalogs/for-you",
    github: "#",
  },

  {
    title: "Firebase Adapter Better Auth",
    description:
      "Demonstration of how to use the Firebase adapter for Better Auth, providing full email-and-password authentication using Firebase Realtime Database.",
    technologies: [
      "Next.js",
      "TypeScript",
      "Tailwind",
      "Firebase",
      "Vercel",
      "Better Auth",
    ],
    image: "/mockup_firebase_auth.png",
    link: "https://github.com/DavidMrtz8/firebase-adapter-better-auth",
    github: "https://github.com/DavidMrtz8/firebase-adapter-better-auth",
  },
];

// Map technologies to icons (use available icons or emoji as fallback)
const techIcons: Record<string, any> = {
  React: ReactIcon,
  "Node.js": NodeIcon,
  Docker: DockerIcon,
  Express: ExpressIcon,
  PostgreSQL: "üêò",
  AWS: AwsIcon,
  Astro: AstroIcon,
  CSS: CssIcon,
  TypeScript: TypeScriptIcon,
  "Next.js": NextIcon,
  Vercel: VercelIcon,
  Cloud: GoogleCloudIcon,
  Fly: FlyIcon,
  Firebase: FirebaseIcon,
  Tailwind: TailwindIcon,
  TRPC: TRPCIcon,
  Hono: HonoIcon,
  Bun: BunIcon,
  "Better Auth": BetterAuthIcon,
};
---

<section class="flex items-center justify-center px-4 container mx-auto pt-8 md:pt-16" id="projects">
  <div class="w-full">
    <!-- Section title -->
    <div class="text-left mb-8 md:mb-16 flex items-center">
      <img src={BranchLeftIcon} alt="branch-left" class="w-10 h-10" />
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-800">
        Selected Projects
      </h2>
      <img src={BranchRightIcon} alt="branch-right" class="w-10 h-10" />
    </div>

    <div class="flex flex-col gap-12 md:gap-16">
      {
        projects.map((project, index) => {
          return (
            <div class={`flex flex-col relative ${index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"} gap-8 md:gap-12 items-center`}>
              {/* Mockup Image */}
              <div class="flex-1 max-w-lg z-10">
                {project.image && (
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-auto object-contain"
                  />
                )}
              </div>
              
              {/* Project Info */}
              <div class={`flex-1 space-y-6 bg-secondary p-6 md:p-8 rounded-lg shadow-sm`}>
                <div>
                  <h3 class="text-2xl md:text-3xl font-bold text-gray-800 mb-4">
                    {project.title}
                  </h3>
                  <p class="text-sm md:text-base text-gray-600 leading-relaxed">
                    {project.description}
                  </p>
                </div>
                
                {/* Technologies */}
                <div class="flex flex-wrap gap-3">
                  {project.technologies.map((tech) => {
                    const IconComponent = techIcons[tech];
                    return (
                      <span class="inline-flex items-center justify-center p-2 rounded-lg">
                        {typeof IconComponent === "string" ? (
                          <span class="text-gray-700 text-lg">
                            {IconComponent}
                          </span>
                        ) : (
                          <IconComponent class="w-8 h-8 text-gray-700" />
                        )}
                      </span>
                    );
                  })}
                </div>
                
                {/* Links */}
                <div class="flex gap-4">
                  <a
                    href={project.link}
                    target="_blank"
                    class="inline-flex items-center px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors font-medium"
                  >
                    View Project
                  </a>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</section>
