---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import Article from '../components/Article.astro';
---

<Layout>
	<Section 
		id="hero" 
		title="Welcome to My Portfolio" 
		subtitle="Software Engineer passionate about creating innovative solutions"
	>
		<div class="grid md:grid-cols-2 gap-8 items-center">
			<div>
				<h1 class="text-4xl font-bold mb-4">David Martinez</h1>
				<p class="text-xl text-muted-foreground mb-6">
					I'm a software engineer with expertise in modern web technologies, 
					creating scalable and user-friendly applications.
				</p>
				<div class="flex gap-4">
					<a 
						href="/projects" 
						class="bg-primary text-primary-foreground px-6 py-3 rounded-lg hover:bg-primary/90 transition-colors"
					>
						View Projects
					</a>
					<a 
						href="/about" 
						class="border border-border px-6 py-3 rounded-lg hover:bg-accent transition-colors"
					>
						About Me
					</a>
				</div>
			</div>
			<div class="flex justify-center">
				<img 
					src="/me.svg" 
					alt="David Martz - Software Engineer" 
					class="w-80 h-80 object-contain"
				/>
			</div>
		</div>
	</Section>

	<Section 
		id="skills" 
		title="Skills & Technologies" 
		subtitle="Technologies I work with"
	>
		<div class="grid md:grid-cols-3 gap-6">
			<Article title="Frontend Development">
				<ul class="space-y-2">
					<li>React & Next.js</li>
					<li>Vue.js & Nuxt</li>
					<li>TypeScript</li>
					<li>Tailwind CSS</li>
				</ul>
			</Article>
			<Article title="Backend Development">
				<ul class="space-y-2">
					<li>Node.js & Express</li>
					<li>Python & Django</li>
					<li>PostgreSQL & MongoDB</li>
					<li>REST APIs & GraphQL</li>
				</ul>
			</Article>
			<Article title="Tools & DevOps">
				<ul class="space-y-2">
					<li>Git & GitHub</li>
					<li>Docker & Kubernetes</li>
					<li>AWS & Vercel</li>
					<li>CI/CD Pipelines</li>
				</ul>
			</Article>
		</div>
	</Section>
</Layout>
